<h1> State: <%= @state.name %> </h1>


<%= render 'check_blank' %>

<div class="container-fluid">
    <div class="row" >
        <% @state.shops.each do |s| %>
          <div class="col-md-4"  style="display:inline-block" >
                <div class="card">
                    <div class="card-body bg-card"> 
                        <div class="img-cafe">
                            <%= render partial: 'all_cafes', locals: {s: s} %>  
                    </div>   
                </div>
            </div>
        <% end %>
    </div>
</div>
