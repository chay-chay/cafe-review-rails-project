<h1> All reviews  </h1> 

<% if @reviews.blank? %>
    <%= "No reviews just yet!  Would you like to add the first review?" %>
     <%= link_to "Write a review", new_shop_review_path(@shop), class: "btn" %>
     
<% end %>


<%= link_to "Back to the all cafe", shops_path, class: "btn" %>

<div class="container-fluid" style="margin-top:3rem">
    <div class="row" style="text-align:left" >
        <% @reviews.each do |r| %>
            <div class="col-md-4"  style="display:inline-block" >
                <div class="card">
                    <div class="card-body text-review bg-card"> 
                            <p style="line-height:0.7">Cafe Name: <%= r.shop.name %></p>  
                            <p style="line-height:0.7">Average Rating of Cafe: <%= r.avg_rating %></p>   
                            <p style="line-height:0.7">Total: <%= r.count_reviews %> review(s)</p>
                            <p style="line-height:1.3">Review: <%= r.content %></p> 
                            <p style="line-height:0.7">Rating: 
                            <% r.rating.times do  %>
                             <i class="bi bi-star-fill"></i> 
                            <% end %></p> 
                            <p style="line-height:0.7">Username: <%= r.user.username %></p>
                            Date: <%= r.created_at.strftime("%b %d, %Y - %I:%M%p")%>
                            <div style="margin:2rem">
                            </div>
                            <div style="margin:2rem">
                            <%= render partial: "button", locals: {r:r} %> 
                            <%= link_to "Write a review", new_shop_review_path(r.id), class: "btn" %>
                            </div>
                    </div>   
                </div>
            </div>
        <% end %>
    </div>
</div>

